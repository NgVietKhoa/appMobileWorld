<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base theme for both light and dark -->
    <style name="Base.Theme.RealtimeOrderMonitor" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Shared attributes if needed -->
    </style>

    <!-- Light Theme -->
    <style name="Theme.RealtimeOrderMonitor" parent="Base.Theme.RealtimeOrderMonitor">
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/purple_80</item>
        <item name="colorOnPrimaryContainer">@color/purple_40</item>

        <item name="colorSecondary">@color/purple_grey_40</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorSecondaryContainer">@color/purple_grey_80</item>
        <item name="colorOnSecondaryContainer">@color/purple_grey_40</item>

        <item name="android:statusBarColor">?attr/colorPrimaryContainer</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>